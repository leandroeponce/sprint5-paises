<div class="flex justify-center items-center">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold text-center mb-4">Agregar País</h2>
    
        <% if (errores.length > 0) { %>
            <div class="bg-red-100 text-red-700 p-4 rounded mb-4">
                <ul class="list-disc list-inside">
                    <% errores.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
    
        <form action="/api/countries/create" method="POST" class="space-y-4 justify-center">
            <div>
                <label class="block text-sm font-medium">Nombre Oficial</label>
                <input type="text" name="countryName" value="<%= country.name?.nativeName?.spa?.official || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <label class="block text-sm font-medium">Capital</label>
                <input type="text" name="countryCapital" value="<%= country.capital || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <label class="block text-sm font-medium">Fronteras (separados por coma)</label>
                <input type="text" name="countryBorders" value="<%= country.borders || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <label class="block text-sm font-medium">Área km2</label>
                <input type="number" name="countryArea" value="<%= country.area || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <label class="block text-sm font-medium">Población</label>
                <input type="number" name="countryPopulation" value="<%= country.population || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <label class="block text-sm font-medium">Índice Gini</label>
                <input type="number" name="countryGini" value="<%= country.gini || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <label class="block text-sm font-medium">Zonas Horarias (separados por coma)</label>
                <input type="text" name="countryTimezones" value="<%= country.timezones || '' %>" class="w-full border p-2 rounded">
            </div>
            <div>
                <button type="submit" class="w-full bg-blue-600 text-white p-2 rounded hover:bg-blue-700 mt-4">Agregar</button>
            </div>
        </form>
    </div>
</div>